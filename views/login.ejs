<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        html,
        body {
            height: 100%;
            width: 100%;
            margin: 0;
            padding: 0;

        }

        nav {
            background-color: blueviolet;
            height: 50px;
            margin: 0;

        }

        nav img {
            height: 50px;
        }

        .main {
            height: calc(100vh - 50px);
            background-color: bisque;
            justify-content: space-evenly;
            align-items: center;
            gap: 0px;
            display: flex;

        }


        input {
            padding-left: 15px;
            margin-top: 20px;
            margin-bottom: 20px;
            height: 27px;
            width: 230px;
            border: 0px solid black;
            border-radius: 6px;
            box-shadow: inset 0px 2px 6px grey;
        }

        input:focus {
            outline: none;

        }

        img {
            height: 30vw;
        }

        .box {
            height: 72vh;
            width: 40vw;
            border-radius: 10px;
            border: 1px solid black;
            align-items: center;
            justify-items: center;
            box-shadow: 0px 0px 10px 0px grey;
        }

        .detail {
            margin-top: 20px;
        }

        button {
            cursor: pointer;
            border: 1px solid black;
            border-radius: 6px;
            height: 30px;
            width: 100px;
        }

        .btn {
            margin-top: 30px;
            gap: 30px;
            display: flex;
        }

        .sub {
            color: white;
            background-color: rgba(60, 58, 58, 0.769);
        }

        .forget {
            display: flex;
            margin-top: 30px;
        }

        /* #signUp a{
            color: black;
           text-decoration: none;
        } */



        @media (min-width:900px) {
            img {
                height: 350px;
            }

            .box {
                height: 75vh;
                width: 430px;
                border-radius: 10px;
                border: 1px solid black;
                display: flex;
                flex-direction: column;
                align-items: center;
                justify-items: center;
            }
        }

        @media (max-width:750px) {
            .main {
                flex-direction: column;
            }

            img {
                height: 170px;
            }

            .box {
                height: 60vh;
                width: 80vw;
                border-radius: 10px;
                border: 1px solid black;
            }
        }
        @media (max-width:450px) {
            .image{
                display: none;
            }
        }
    </style>
</head>

<body>
    <nav>
        <img src="https://media.istockphoto.com/id/1739381148/vector/lost-items-icon-lost-and-found.jpg?s=612x612&w=0&k=20&c=cfMKPPNCCI-R95iEBcALlkCbgBVPj5smE7RG1aRRAcU="
            alt="">
    </nav>
    <div class="main">
        <div class="image">
            <img src="./images/login photo.png" alt="">
        </div>
        <form action="/loginuser" method="post">
            <div class="box">
            <h1>Login</h1>
            <div class="detail">
                <label for="">User Name</label>
                <br>
                <input class="name" id="nameInput" name="mail" type="text">
                <br>
                <label for="">Password</label>
                <br>
                <input class="name" id="passwordInput" name="password" type="password">
            </div>
            <div class="btn">
                <button class="sub" type="submit" >Sign In</button>
                <button id="signUp" type="button">Sign Up</button>
            </div>
            <a class="forget" href="">Forget Password</a>
        </div>
        </form>
    </div>
  <!-- <script src="./scripts/login.js"></script> -->
   <script>
    let signUp = document.querySelector("#signUp");
    signUp.addEventListener('click',()=>{
        window.location.href ="/register";
    })
   </script>
</body>

</html>