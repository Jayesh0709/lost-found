
    <!DOCTYPE html>
    <html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="./css/lost.css">
        <title>Document</title>
        <style>
            .item {
                position: relative;
            }

            .delete {
                height: 20px;
                width: 60px;
                background-color: rgba(212, 36, 36, 0.904);
                margin-top: 10px;
                margin-right: 20px;
                border-radius: 20px;
                text-align: center;
                position: absolute;

                right: 0px;
                place-content: center;
            }

            .delete a {
                text-decoration: none;
                color: white;
                font-weight: bold;
            }
        </style>
    </head>

    <body>
        <nav>
            <img src="https://media.istockphoto.com/id/1739381148/vector/lost-items-icon-lost-and-found.jpg?s=612x612&w=0&k=20&c=cfMKPPNCCI-R95iEBcALlkCbgBVPj5smE7RG1aRRAcU="
                alt="">
            <div class="men">
                <img class="th" src="./images/main-menu.png" alt="no">
                <img class="cl" src="./images/close.png" alt="no">
            </div>
            <div class="links">
                <a href="/">Home</a>
                <a href="/lost">Lost</a>
                <a href="/reportLost">Report Lost</a>
                <a href="/found">Found</a>
                <a href="/reportfound">Report Found</a>
                <a href="/profile">Profile</a>
                <a href="/signOut"><button>sign out</button></a>
            </div>
        </nav>

        <!-- -------  main  ----- -->

        <div class="main">
            <h1>Profile</h1>
            <div class="items">
                <% udata.forEach(e=> {%>
                    <div class="item">
                        <div class="itemname">
                            <h1>
                                <%= e.name %>
                            </h1>
                            <h4><%= e.date %></h4>
                        </div>
                        <div class="image">
                            <img src="<%= e.photoUrl %>" alt="">
                        </div>
                        <div class="itemdes">
                            <h4><%= e.item %></h4>
                            <p><%=  e.location %></p>
                        </div>
                        <div class="des">
                            <p> <%= e.des %></p>
                        </div>
                        <div class="delete"><a href="">Delete</a></div>
                    </div>
                    <% }); %>
            </div>
        </div>


        <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js"
            integrity="sha512-7eHRwcbYkK4d9g/6tD/mhkf++eoTHwpNM9woBxtPUBWm67zeAfFC+HrdoE2GanKeocly/VxeLvIqwvCdk7qScg=="
            crossorigin="anonymous" referrerpolicy="no-referrer"></script>
        <script src="./scripts/index.js"></script>
    </body>
</html>